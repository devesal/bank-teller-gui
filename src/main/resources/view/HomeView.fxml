<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.textfield.CustomTextField?>

<BorderPane styleClass="body" stylesheets="@../styles/homeview.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">

    <left>
        <VBox styleClass="sidebar">
            <Button styleClass="sidebar-button, big-button" text="Customers"/>
            <Button styleClass="sidebar-button, big-button" text="Report Generation"/>
        </VBox>
    </left>

    <center>
        <VBox>
            <HBox styleClass="page-header">
                <HBox styleClass="header-left">
                    <Button text="Back"/>
                    <Label text="Customers"/>
                </HBox>
                <Region HBox.hgrow="ALWAYS"/>
                <HBox styleClass="header-right">
                    <CustomTextField fx:id="searchField" styleClass="search-field" promptText="Search"/>
                    <Button styleClass="big-button, green-button" text="Create Account Holder"/>
                </HBox>
            </HBox>
            <VBox styleClass="active-window" VBox.vgrow="ALWAYS">
                <VBox styleClass="customers-table" VBox.vgrow="ALWAYS"></VBox>
            </VBox>
        </VBox>
    </center>

</BorderPane>